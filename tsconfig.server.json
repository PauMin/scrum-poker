{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "server/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}